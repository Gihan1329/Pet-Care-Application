<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customerprofile"
    tools:context=".customer_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOUR PROFILE"
                android:textAlignment="center"
                android:fontFamily="@font/oswald_semibold"
                android:textSize="30sp"
                android:textColor="#001B60"
              />

            <ImageView
                android:id="@+id/imvCustProImg"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/activebookingback" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:hint="Your Name"
                android:textColorHint="#001B60"
                android:textColor="#001B60"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCustProName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:textColor="#001B60"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#001B60"
                android:hint="Your Email"
                android:textColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCustProEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:textColor="#001B60"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#001B60"
                android:hint="Your Phone Number"
                android:textColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCustProPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:textColor="#001B60"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#001B60"
                android:hint="Your Address"
                android:textColor="#001B60"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCustProAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:textColor="#001B60"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnSaveChnagePro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save Changes"
                android:layout_marginTop="20dp"
                android:backgroundTint="#001B60"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Your Feedbacks"
                android:textAlignment="center"
                android:textColor="#001B60"
                android:textSize="26sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvViewCustFeedPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>