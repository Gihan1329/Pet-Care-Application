<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookcaregiver"

    tools:context=".book_caregiver">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/oswald_semibold"
                android:text="Book A Caregiver"
                android:textAlignment="center"
                android:textColor="#001B60"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Add Image of the Pet"
                android:textColor="#001B60" />

            <ImageView
                android:id="@+id/imvPetBook"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_person_2_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Pet Name"
                android:textColor="#001B60"
                app:hintTextColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:textColor="#001B60"
                    app:hintTextColor="#001B60" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Age(Years)"
                android:textColor="#001B60"
                app:hintTextColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPetAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="date"
                    android:textColor="#001B60"
                    app:hintTextColor="#001B60" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Special Instruction"
                android:textColor="#001B60"
                app:hintTextColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSpeInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="text|textImeMultiLine"
                    android:textColor="#001B60"
                    app:hintTextColor="#001B60" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/oswald_semibold"
                android:hint="District(nearby)"
                android:textColor="#001B60"
                app:hintTextColor="#001B60">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLocationBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="text|textImeMultiLine"
                    android:textColor="#001B60"
                    app:hintTextColor="#001B60" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Pet Type"
                    android:textColor="#001B60"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Sex"
                    android:textColor="#001B60"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rabDog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_semibold"
                        android:text="Dog"
                        android:textColor="#001B60"
                        android:textColorHint="#001B60" />

                    <RadioButton
                        android:id="@+id/rabCat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_semibold"
                        android:text="Cat"
                        android:textColor="#001B60"
                        android:textColorHint="#001B60" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp">

                    <RadioButton
                        android:id="@+id/rabMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_semibold"
                        android:text="Male"
                        android:textColor="#001B60"
                        android:textColorHint="#001B60" />

                    <RadioButton
                        android:id="@+id/rabFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_semibold"
                        android:text="Female"
                        android:textColor="#001B60"
                        android:textColorHint="#001B60" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Schedule"
                android:textColor="#001B60"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ADC5EA"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="none"
                    android:padding="5dp"
                    android:text="Select Start Date"
                    android:textColor="#001B60"
                    android:textColorHint="#001B60"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="To"
                    android:textColor="#001B60"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ADC5EA"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="none"
                    android:padding="5dp"
                    android:text="Select End Date"
                    android:textColor="#001B60"
                    android:textColorHint="#001B60"
                    android:textSize="18sp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="*Price is calculated based on the selected pet type and duration"
                android:textAlignment="center"
                android:textColor="#E10007"
                android:background="@color/white"
                android:padding="10dp"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnBookCare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="#001B60"
                android:text="Book" />

            <ProgressBar
                android:id="@+id/pbBookCare"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>