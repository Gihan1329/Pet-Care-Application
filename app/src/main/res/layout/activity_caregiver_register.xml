<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".caregiver_register">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/registerback"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_semibold"
                android:text="CAREGIVER \nREGISTRATION"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/blue"
                android:textSize="28sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvCareImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_person_2_24" />

            <ImageButton
                android:id="@+id/imbCareImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#001B60"
                android:src="@drawable/baseline_camera_alt_24" />

            <EditText
                android:id="@+id/edtCareName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Enter Your Name"
                android:inputType="text"
                android:textColorHint="#001B60" />

            <EditText
                android:id="@+id/edtCarePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Enter Your Phone Number"
                android:inputType="phone"
                android:textColorHint="#001B60" />

            <EditText
                android:id="@+id/edtCareAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Enter Your Address"
                android:inputType="textPostalAddress"
                android:textColorHint="#001B60" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Years Of experience"
                android:textColor="#001B60" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:id="@+id/actvYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/oswald_semibold"
                    android:inputType="none"
                    android:text="Select From here"
                    android:textColor="#001B60" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Service Offered"
                android:textColor="#001B60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkCareOffer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Walking"
                    android:textColor="#001B60" />

                <CheckBox
                    android:id="@+id/chkCareOffer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Pet Sitting"
                    android:textColor="#001B60" />

                <CheckBox
                    android:id="@+id/chkCareOffer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Grooming"
                    android:textColor="#001B60" />

                <CheckBox
                    android:id="@+id/chkCareOffer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Training"
                    android:textColor="#001B60" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oswald_semibold"
                android:text="Pet Type"
                android:textColor="#001B60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkCareTypeDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Dog"
                    android:textColor="#001B60" />

                <CheckBox
                    android:id="@+id/chkCareTypeCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="Cat"
                    android:textColor="#001B60" />
            </LinearLayout>


            <EditText
                android:id="@+id/edtCareEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#001B60" />

            <EditText
                android:id="@+id/edtCarePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Enter New Password"
                android:inputType="numberPassword"
                android:textColorHint="#001B60" />

            <EditText
                android:id="@+id/edtCareCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/oswald_semibold"
                android:hint="Confirm Your Password"
                android:inputType="numberPassword"
                android:textColorHint="#001B60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/btnCareReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#001B60"
                android:fontFamily="@font/oswald_semibold"
                android:text="REGISTER"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pbCareReg"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>