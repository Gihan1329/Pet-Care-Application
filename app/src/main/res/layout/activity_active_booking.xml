<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".active_booking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activebookingback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_semibold"
                android:text="ACTIVE BOOKINGS"
                android:textAlignment="center"
                android:textColor="#001B60"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/linAcBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvPetImageAc"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/noimage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txvPetNameAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Pet Name"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvPetAgeAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Age"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvPetInstructionsAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Instructions"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvPetStatusAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Status"
                            android:textColor="#FF0303"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvPetPriceAc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Price"
                            android:textColor="#001B60"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnBookCancel"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#001B60"
                    android:text="Cancel Booking" />

                <LinearLayout
                    android:id="@+id/feedbackAddLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/oswald_semibold"
                        android:text="Service Is Completed Add Feedback to Caregiver"
                        android:textAlignment="center"
                        android:textColor="#27DF1A"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnLoadFeedback"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:backgroundTint="#001B60"
                        android:text="Add FeedBack" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/laCareDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/oswald_semibold"
                    android:text="CAREGIVER DETAILS"
                    android:textAlignment="center"
                    android:textColor="#001B60"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Caregiver Name -"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvCareNameAc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:textColor="#001B60"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Caregiver Phone Number -"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvCarePhoneAc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:textColor="#001B60"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/oswald_semibold"
                            android:text="Caregiver Email -"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txvCareEmailAc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/oswald_semibold"
                            android:textColor="#001B60"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnContactCaregiver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_semibold"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#001B60"
                        android:text="Contact" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>