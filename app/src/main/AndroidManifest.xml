        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetCare"
        tools:targetApi="31">
        <activity
            android:name=".firstSplashScreen"
            android:exported="false" />
        <activity
            android:name=".caregiver_profile"
            android:exported="false" />
        <activity
            android:name=".customer_profile"
            android:exported="false" />
        <activity
            android:name=".view_job_process"
            android:exported="false" />
        <activity
            android:name=".find_job_care"
            android:exported="false" />
        <activity
            android:name=".active_booking"
            android:exported="false" />
        <activity
            android:name=".book_caregiver"
            android:exported="false" />
        <activity
            android:name=".splash_screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".caregiver_home"
            android:exported="false" />
        <activity
            android:name=".customer_home"
            android:exported="false" />
        <activity
            android:name=".caregiver_register"
            android:exported="false" />
        <activity
            android:name=".customer_register"
            android:exported="false" />
        <activity
            android:name=".user_login"
            android:exported="false" />
        <activity
            android:name=".choose_login"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>